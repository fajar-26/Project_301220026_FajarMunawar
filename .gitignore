# CodeIgniter 3 .gitignore

# Application specific files
application/cache/*
!application/cache/index.html
!application/cache/.htaccess

application/logs/*
!application/logs/index.html
!application/logs/.htaccess

application/config/development/
application/config/testing/
application/config/production/

# Uploads directory
uploads/
!uploads/index.html
!uploads/.htaccess

# Temporary files
*.tmp
*.temp
*.swp
*.swo
*~

# IDE files
.vscode/
.idea/
*.sublime-project
*.sublime-workspace

# OS generated files
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db

# Backup files
*.bak
*.backup
*.old

# Database files
*.sql
!database_money_mentor_pro.sql

# Environment files
.env
.env.local
.env.production

# Composer
vendor/
composer.lock

# Node modules (if using any frontend build tools)
node_modules/
npm-debug.log
yarn-error.log

# Build files
dist/
build/

# Test files
tests/
test-results/

# Documentation build
docs/_build/

# Local configuration
application/config/database.php
application/config/config.php

# Session files
application/sessions/

# Cache files
application/cache/*.cache

# Error logs
error_log
access_log

# XAMPP specific
xampp/
htdocs/
